<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/btn_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:width="100dp"
            android:height="80dp"
            android:background="#ff0000"
            android:text="red" />

        <Button
            android:id="@+id/btn_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_red"
            android:layout_marginLeft="230dp"
            android:width="140dp"
            android:height="80dp"
            android:background="#ff9900"
            android:text="orange" />

        <Button
            android:id="@+id/btn_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:width="120dp"
            android:height="80dp"
            android:background="#ffff00"
            android:text="yellow" />

        <Button
            android:id="@+id/btn_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="120dp"
            android:width="120dp"
            android:height="80dp"
            android:background="#33ff00"
            android:text="green" />

        <Button
            android:id="@+id/btn_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_green"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="120dp"
            android:width="100dp"
            android:height="80dp"
            android:background="#0000ff"
            android:text="blue" />

        <Button
            android:id="@+id/btn_indigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_blue"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="120dp"
            android:width="120dp"
            android:height="80dp"
            android:background="#660099"
            android:text="indigo" />

        <Button
            android:id="@+id/btn_violet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:height="80dp"
            android:background="#ff99ff"
            android:text="violet" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>